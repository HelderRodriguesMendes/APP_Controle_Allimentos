<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.view.cadastrarCompraActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/tituloCadastroCompra"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtSupermercado"
        android:layout_width="295dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:drawableLeft="@drawable/supermercado"
        android:ems="10"
        android:hint="@string/supermercado"
        android:inputType="textPersonName"
        android:textColor="@color/dark_gray"
        app:layout_constraintEnd_toEndOf="@+id/textViewDataCompra"
        app:layout_constraintStart_toStartOf="@+id/textViewDataCompra"
        app:layout_constraintTop_toBottomOf="@+id/textViewDataCompra"
        android:autofillHints=""
        android:drawableStart="@drawable/supermercado" />

    <Button
        android:id="@+id/btnAddProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"

        android:background="@null"
        android:drawableLeft="@drawable/ic_baseline_add"
        android:drawableTint="@color/colorPrimary"
        android:drawableTintMode="screen"
        android:text="  Produtos"


        android:textColor="@color/dark_gray"
        app:layout_constraintEnd_toEndOf="@+id/txtFoneSupermercado"
        app:layout_constraintTop_toBottomOf="@+id/txtFoneSupermercado" />

    <TextView
        android:id="@+id/textViewDataCompra"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:textColor="@color/dark_gray"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:drawableLeftCompat="@drawable/data" />

    <EditText
        android:id="@+id/txtFoneSupermercado"
        android:layout_width="295dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:drawableLeft="@drawable/fone"
        android:drawableTint="@color/colorPrimary"
        android:drawableTintMode="screen"
        android:ems="10"
        android:hint="Supermercado"
        android:inputType="phone"
        android:maxLength="15"
        android:textColor="@color/dark_gray"
        app:layout_constraintEnd_toEndOf="@+id/txtSupermercado"
        app:layout_constraintStart_toStartOf="@+id/txtSupermercado"
        app:layout_constraintTop_toBottomOf="@+id/txtSupermercado" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="159dp"
        android:layout_height="208dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddProduto"
        app:srcCompat="@drawable/cadcompra" />

</androidx.constraintlayout.widget.ConstraintLayout>